# This is a sample .clang-format file.
# Place this file in your project's root directory or a parent directory.
# clang-format will automatically find and use it.
#
# You can generate a base configuration file using:
#   clang-format -style=llvm -dump-config > .clang-format
#   (Replace 'llvm' with 'google', 'webkit', 'mozilla', 'chromium', 'microsoft', 'gnu' etc.)
#
# Full documentation of options: https://clang.llvm.org/docs/ClangFormatStyleOptions.html

# Specify the language if needed (Cpp, Java, JavaScript, ObjC, Proto, TableGen, TextProto)
# Often auto-detected, but can be explicit.
Language: Cpp

BasedOnStyle: LLVM

# --- INDENTATION ---
IndentWidth: 4
TabWidth: 4
UseTab: Never
ContinuationIndentWidth: 4
IndentAccessModifiers: false
AccessModifierOffset: -4
BreakConstructorInitializers: AfterColon
IndentExternBlock: NoIndent

# --- ALIGNMENT ---
AlignAfterOpenBracket: Align
AlignArrayOfStructures: Left
AlignConsecutiveAssignments: None
AlignConsecutiveDeclarations: None
AlignOperands: AlignAfterOperator
BinPackArguments: true
BinPackParameters: false

# --- SPACING ---
PackConstructorInitializers: Never
SpaceBeforeParens: ControlStatements
SpaceBeforeCpp11BracedList: false # LLVM default is true, common preference is false
SpacesInParentheses: false
SpacesInCStyleCastParentheses: false
SpacesInContainerLiterals: false

# --- LINE BREAKS & WRAPPING ---
ColumnLimit: 100

AlwaysBreakTemplateDeclarations: Yes
BreakBeforeBinaryOperators: NonAssignment
BreakBeforeBraces: Custom
BraceWrapping:
  AfterCaseLabel: true
  AfterClass: true
  AfterControlStatement: Always
  AfterEnum: true
  AfterFunction: true
  AfterNamespace: true
  AfterObjCDeclaration: true
  AfterStruct: true
  AfterUnion: true
  AfterExternBlock: false
  BeforeCatch: true
  BeforeElse: true
  BeforeLambdaBody: false
  BeforeWhile: false
  IndentBraces: false
  SplitEmptyFunction: true
  SplitEmptyRecord: true
  SplitEmptyNamespace: true

PenaltyBreakBeforeFirstCallParameter: 19 # LLVM default

AllowShortFunctionsOnASingleLine: None
AllowShortIfStatementsOnASingleLine: Never
AllowShortLoopsOnASingleLine: false
AllowShortCaseLabelsOnASingleLine: false
AllowShortBlocksOnASingleLine: false

# --- POINTERS & REFERENCES ---
PointerAlignment: Left
ReferenceAlignment: Left

# --- INCLUDES ---
SortIncludes: true
IncludeBlocks: Merge
IncludeCategories:
  - Regex:           '".*"'  # Other quoted includes (usually sibling files)
    Priority:        2
  - Regex:           '^<.*\.h>'
    Priority:        3  # C system headers
  - Regex:           '^<.*\.(hh|cc|cpp|hpp|hxx)>'
    Priority:        3  # C++ standard library headers
  - Regex:           '^<.*'
    Priority:        4

# --- Comments ---
ReflowComments: true
